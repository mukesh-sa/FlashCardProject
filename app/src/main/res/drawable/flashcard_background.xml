<!-- res/drawable/flashcard_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#B0BEC5" /> <!-- Light shadow color -->
        </shape>
    </item>
    <!-- Card Background Layer -->
    <item android:left="4dp" android="4dp"> <!-- Offset for shadow effect -->
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#A020F0" /> <!-- White background for card -->
        </shape>
    </item>
</layer-list>
