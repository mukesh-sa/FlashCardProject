<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flashcard">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flashcard"
        tools:targetApi="31">

        <!-- Splash Screen Activity (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Flashcard.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (No launcher intent filter) -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:label="Home"
            android:exported="true">
        </activity>

        <!-- Flashcard Form Activity -->
        <activity
            android:name=".FlashcardFormActivity"
            android:label="Create Flashcard"
            android:exported="true">
        </activity>

        <!-- Flashcard View Activity -->
        <activity
            android:name=".FlashcardViewActivity"
            android:label="View Flashcard"
            android:exported="true">
        </activity>

        <!-- Flashcard Adapter Activity (if used) -->
        <activity
            android:name=".FlashcardAdapter"
            android:label="Create Flashcard"
            android:exported="true">
        </activity>

        <!-- Add any additional activities here -->

    </application>

</manifest>
